{
	"name": "react-typescrip-graphql-example",
	"version": "1.0.0",
	"description": "Example app (server and client) for using react, typescript and graphql together",
	"private": true,
	"workspaces": [
		"client",
		"server"
	],
	"scripts": {
		"start": "yarn build:server && run-p -l start:server start:client",
		"start:server": "cd server && yarn start",
		"start:client": "cd client && yarn start",
		"build": "run-p build:server build:server",
		"build:server": "cd server && yarn build",
		"build:client": "cd client && yarn build",
		"install:server": "cd server && yarn install",
		"install:client": "cd server && yarn install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tafkanator/react-typescrip-graphql-example.git"
	},
	"keywords": [
		"react",
		"typescript",
		"graphgql"
	],
	"author": "Taavi Sangel",
	"license": "MIT",
	"homepage": "https://github.com/tafkanator/react-typescrip-graphql-example#readme",
	"dependencies": {
		"@types/deepmerge": "^2.1.0",
		"@types/glob": "^5.0.35",
		"@types/koa": "^2.0.44",
		"@types/koa-bodyparser": "^4.2.0",
		"@types/koa-router": "^7.0.27",
		"deepmerge": "^2.1.0",
		"glob": "^7.1.2",
		"graphql": "^0.13.2",
		"graphql-tag": "^2.8.0",
		"graphql-yoga": "^1.7.0",
		"npm-run-all": "^4.1.2",
		"prettier": "^1.13.4"
	}
}
