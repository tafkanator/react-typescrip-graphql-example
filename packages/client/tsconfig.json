{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "build",
		"rootDir": "src",
		"baseUrl": "./",
		"target": "es2016",
		"lib": ["dom", "es2016", "es2017", "esnext.asynciterable"],
		"jsx": "react",
		"plugins": [
			{
				"name": "ts-graphql-plugin",
				"schema": "src/generated/schema.json",
				"tag": "gql"
			}
		]
	},
	"include": ["src"]
}
