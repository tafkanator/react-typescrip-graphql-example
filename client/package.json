{
	"name": "client",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"apollo-boost": "^0.1.7",
		"apollo-codegen": "0.19.1",
		"graphql": "^0.13.2",
		"graphql-tag": "^2.9.2",
		"npm-run-all": "^4.1.3",
		"onchange": "3.3.0",
		"react": "^16.4.0",
		"react-apollo": "^2.1.4",
		"react-dom": "^16.4.0",
		"react-router-dom": "^4.3.1",
		"react-scripts-ts": "^2.15.1",
		"tslint-config-prettier": "^1.12.0"
	},
	"scripts": {
		"start": "run-p typings:watch start:dev-server",
		"start:dev-server": "react-scripts-ts start",
		"build": "react-scripts-ts build",
		"typings:watch": "onchange \"./src/**/*.tsx\" -e \"./src/generated/*.*\" -w -i -- yarn typings:update",
		"typings:update": "yarn typings:make-schema && yarn typings:make-ts-types",
		"typings:make-schema": "apollo-codegen introspect-schema http://localhost:3001/graphql --output src/generated/schema.json",
		"typings:make-ts-types": "apollo-codegen generate src/**/*.tsx --schema src/generated/schema.json --target typescript --output src/generated/schema-types.ts",
		"test": "react-scripts-ts test --env=jsdom"
	},
	"devDependencies": {
		"@types/jest": "^22.2.3",
		"@types/prop-types": "15.5.2",
		"@types/react": "^16.3.13",
		"@types/react-dom": "^16.0.5",
		"@types/react-router-dom": "4.2.6",
		"typescript": "^2.8.3"
	},
	"proxy": "http://localhost:3001"
}
