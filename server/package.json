{
	"name": "server",
	"version": "1.0.0",
	"description": "",
	"license": "UNLICENSED",
	"main": "build/server.js",
	"scripts": {
		"start": "yarn serve:dev",
		"serve:dev": "node-dev --no-notify --inspect=5858 -r ts-node/register src/index.ts",
		"serve:production": "node -r ts-node/register build/index.js",
		"build": "tsc -p tsconfig.json",
		"migration:create": "ts-node ../node_modules/typeorm/cli migration:create",
		"migration:generate": "ts-node ../node_modules/typeorm/cli migration:generate",
		"migration:run": "ts-node ../node_modules/typeorm/cli migration:run",
		"migration:revert": "ts-node ../node_modules/typeorm/cli migration:revert"
	},
	"dependencies": {
		"apollo-server": "^2.0.0-rc.3",
		"apollo-server-express": "^2.0.0-rc.3",
		"casual": "^1.5.19",
		"express": "^4.16.3",
		"graphql": "^0.13.2",
		"sqlite3": "^4.0.0",
		"typeorm": "^0.2.7"
	},
	"devDependencies": {
		"@types/express": "^4.16.0",
		"@types/graphql": "^0.13.1",
		"@types/node": "^10.3.3",
		"chokidar": "^2.0.4",
		"node-dev": "^3.1.3",
		"reflect-metadata": "^0.1.12",
		"source-map-support": "^0.5.6",
		"ts-node": "^6.1.0",
		"typescript": "^2.9.2"
	}
}
